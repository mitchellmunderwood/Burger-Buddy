<h1>Burgers</h1>

<h2>Undevoured</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>#{{id}}. {{burger_name}}, {{devoured}} <button class="eat-burger" data-id="{{id}}">Devour!</button></li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>#{{id}}. {{burger_name}}, {{devoured}}</li>
    {{/if}}
    {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="createBurger" name="name">
    </div>

    <button type="submit">Create</button>
</form>