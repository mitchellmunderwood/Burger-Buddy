<h1>Burgers</h1>

<ul>
    {{#each burgers}}
    <li>#{{id}}. {{burger_name}}, {{devoured}}</li>
    {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="createBurger" name="name">
    </div>

    <button type="submit">Create</button>
</form>